                </LinearLayout>

            </RelativeLayout>


            <!-- gallery-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:gravity="center">


                <LinearLayout
                    android:id="@+id/ll_gallery_body"
