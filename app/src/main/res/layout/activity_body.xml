    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottombar_bg_1"
            android:weightSum="0"
            tools:ignore="DisableBaselineAlignment"
            android:id="@+id/linearLayout2">



            <!-- profile-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:gravity="center">


                <LinearLayout
                    android:id="@+id/ll_profile_body"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onCLickProfile"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_medium"
                    android:paddingRight="@dimen/padding_medium"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/img_profile_body"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/black"
                        android:src="@mipmap/ic_profile"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_profile_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:paddingTop="@dimen/padding_bit"
                        android:text="@string/profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_xxsmall"
                        android:visibility="gone"
                        tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>

            </RelativeLayout>


